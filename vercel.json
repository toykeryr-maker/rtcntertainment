{
    "version": 2,
    "buildCommand": "pnpm install && pnpm build",
    "outputDirectory": "dist/public",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}